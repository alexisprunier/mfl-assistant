{
  "parser": "@babel/eslint-parser",
  "parserOptions":
  {
    "ecmaVersion": 2020
  },
  "extends": ["airbnb-base", "plugin:react/recommended"],
  "env":
  {
    "node": true,
    "es6": true,
    "browser": true
  },
  "rules":
  {
    "no-console": "off",
    "linebreak-style": 0,
    "indent": [2, "tab"],
    "react-hooks/exhaustive-deps": "off",
    "quotes": [2, "double",
    {
      "avoidEscape": true
    }],
    "no-tabs": 0,
    "no-plusplus": 0,
    "prefer-template": 0,
    "react/prop-types": 0,
    "no-param-reassign": ["error",
    {
      "props": true,
      "ignorePropertyModificationsFor": ["data"]
    }],
    "prefer-destructuring": ["error",
    {
      "object": true,
      "array": false
    }],
    "space-infix-ops": ["error",
    {
      "int32Hint": false
    }]
  },
  "ignorePatterns": ["/node_modules/*", "/build/*", "/public/*"]
}